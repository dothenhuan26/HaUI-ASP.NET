
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h3 {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
    }

    tr, td {
        padding: 0.5rem;
        margin: 0.5rem;
    }

    input[type=text], select {
        width: 200px;
        margin: 1rem;
        padding: 0.5rem;
    }
</style>

<h2>Index</h2>

<form action="Result" method="post">
    <table border="1">
        <tr><td colspan="3"><h3>TÍNH TIỀN ĐIỆN</h3></td></tr>
        <tr>
            <td>Họ tên chủ hộ:</td>
            <td><input type="text" name="fullname" value="" /></td>
            <td><label><input type="checkbox" name="uutien" value="uutien" />Hộ ưu tiên</label></td>
        </tr>
        <tr>
            <td>Loại điện tiêu thụ: </td>
            <td colspan="2">
                <select name="loaidien">
                    <option value="kinhdoanh">Kinh doanh</option>
                    <option value="sinhhoat">Sinh hoạt</option>
                    <option value="sanxuat">Sản xuất</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Vào chỉ số cũ:</td>
            <td colspan="2"><label><input type="text" name="chisocu" value="" />KW</label></td>
        </tr>
        <tr>
            <td>Vào chỉ số mới:</td>
            <td colspan="2"><label><input type="text" name="chisomoi" value="" />KW</label></td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="d-flex text-center">
                    <button type="submit">TÍNH</button>
                </div>
            </td>
        </tr>
    </table>
</form>