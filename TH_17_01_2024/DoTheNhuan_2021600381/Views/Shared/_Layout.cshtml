<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<style>
    body {
        padding-top: 0;
    }
    .heading {
        margin: 0;
        padding: 1rem;
        text-align: center;
        font-weight: bold;
    }
</style>

<body>
    <div class="navbar navbar-inverse">
        <div class="bg-primary">
            <h1 class="heading">Web Application</h1>
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CỬA HÀNG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("THÊM SÁCH", "Index", "CuaHang")</li>
                    <li>@Html.ActionLink("HIỂN THỊ DANH SÁCH", "DisplayList", "CuaHang")</li>
                    <li>@Html.ActionLink("HIỂN THỊ CỬA HÀNG", "DisplayCuaHang", "CuaHang")</li>
                    <li>@Html.ActionLink("NHẬP EMPLOYEE", "Index", "Emps")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
